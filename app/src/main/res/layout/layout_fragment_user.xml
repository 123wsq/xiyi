<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_backgroud_color"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/image_title_background"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="top"

        >
        <com.example.wsq.android.view.RoundImageView
            android:id="@+id/roundImage_header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/defalut_layout_height"
            android:layout_marginRight="10dp"
            imagecontrol:border_outside_color="#E4E4E4"
            imagecontrol:border_inside_color="#FFFFFF"
            imagecontrol:border_thickness="2dp"
            android:src="@drawable/image_header_bg" />
            />
        <LinearLayout
            android:id="@+id/ll_user_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="top"
            >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/default_margin"
            >
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="@dimen/default_text_title_size"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/default_radius">
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/default_text_size"
                    android:textColor="@color/color_white"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"
                    android:layout_margin="@dimen/default_radius"
                    />
                <TextView
                    android:id="@+id/tv_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/default_text_size"
                    android:textColor="@color/color_white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/default_radius">

                <ImageView
                    android:id="@+id/iv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_integral"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分 2000"
                    android:textSize="@dimen/default_text_size"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="@dimen/default_radius"
                    />

                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签到"
                    android:background="@drawable/shape_text_stroken"
                    android:paddingLeft="@dimen/default_radius"
                    android:paddingRight="@dimen/default_radius"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textSize="@dimen/default_text_size"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="@dimen/default_margin"
                    />
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_left"
                    android:layout_marginRight="@dimen/default_margin"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/shape_user_c"
            />
    </LinearLayout>



    <!--企业工程师 企业管理工程师 任务部分-->

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/color_white"
    android:id="@+id/ll_product_Info"
    >
    <CheckBox
        android:id="@+id/cb_checkBox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:button="@null"
        android:layout_marginLeft="@dimen/radius_popup"
        android:layout_marginRight="@dimen/radius_popup"
        android:background="@drawable/selector_collect_check"
        />
    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/images_product_1"
        android:layout_marginLeft="@dimen/radius_popup"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/default_radius"
        android:layout_marginRight="@dimen/default_radius"
        >
        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_radius"
            android:singleLine="true"
            android:text="电机励磁故障分析"
            android:textColor="#000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间:"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017-12-18 16:58:43"
                android:textSize="13sp"
                android:layout_marginLeft="@dimen/default_margin"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电机励磁故障分析"
            android:maxLines="3"
            android:minLines="3"
            android:textSize="13sp"
            android:ellipsize="end"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="详情>> "
            android:gravity="right"
            android:textSize="13sp"
            android:textColor="@color/defalut_title_color"
            />
    </LinearLayout>

</LinearLayout>

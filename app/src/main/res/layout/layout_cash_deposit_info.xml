<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_backgroud_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_default_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/radius_popup"
                    android:drawableLeft="@drawable/image_bank_icbc"
                    android:drawablePadding="@dimen/radius_popup"
                    android:gravity="center"
                    android:text="工商银行"
                    android:textSize="@dimen/default_text_title_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/image_money_black" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="30sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_cash_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/radius_popup"
                    android:layout_marginTop="@dimen/default_margin"
                    android:text=""
                    android:textColor="@color/RED"
                    android:textSize="@dimen/default_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/color_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/radius_popup"
                    android:layout_marginTop="@dimen/radius_popup"
                    android:text="处理进度"
                    android:textSize="@dimen/default_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/defalut_layout_height"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/defalut_layout_height"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/defalut_layout_height"
                            android:layout_height="match_parent"
                            >
                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_centerInParent="true"
                                >
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@color/defalut_title_color"
                                    android:visibility="invisible" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@color/defalut_title_color"
                                    android:layout_marginTop="17dp"
                                    />
                            </LinearLayout>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/image_cash_progress"
                                android:layout_centerInParent="true"
                                />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_apply_success"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/defalut_title_color"
                        android:textSize="@dimen/default_text_size" />

                    <TextView
                        android:id="@+id/tv_apply_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/color_gray"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/defalut_layout_height"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="@dimen/defalut_layout_height"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        >

                        <LinearLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/defalut_title_color"
                                android:visibility="visible"
                                android:layout_marginBottom="5dp"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/color_gray"
                                android:layout_marginTop="15dp"
                                />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/image_cash_progress"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/defalut_title_color"
                        android:textSize="@dimen/default_text_size" />

                    <TextView
                        android:id="@+id/tv_apply_time_i"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/color_gray"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/defalut_layout_height"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/defalut_layout_height"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/color_gray"
                                android:visibility="visible"
                                android:layout_marginBottom="17dp"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/color_gray"
                                android:visibility="invisible" />
                        </LinearLayout>


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:src="@drawable/image_chsh_unchecked"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:gravity="center"
                        android:text="审核通过"
                        android:textSize="@dimen/default_text_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="预计1-7个工作日内到账"
                        android:textColor="@color/color_gray"
                        android:textSize="@dimen/default_text_size" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/defalut_layout_height"
                android:layout_marginTop="2dp"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:gravity="center"
                    android:text="提现到"
                    android:textSize="@dimen/default_text_min_size" />

                <TextView
                    android:id="@+id/tv_apply_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/default_margin"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textSize="@dimen/default_text_min_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_apply_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:gravity="center"
                    android:text="申请理由:"
                    android:textSize="@dimen/default_text_min_size" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginTop="@dimen/default_radius"
                    android:gravity="top"
                    android:minLines="3"
                    android:text=""
                    android:textSize="@dimen/default_text_min_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reject_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:gravity="center"
                    android:text="驳回理由:"
                    android:textSize="@dimen/default_text_min_size" />

                <TextView
                    android:id="@+id/tv_reject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginTop="@dimen/default_radius"
                    android:gravity="top"
                    android:minLines="3"
                    android:text=""
                    android:textSize="@dimen/default_text_min_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Details_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/defalut_layout_height"
                    android:layout_marginTop="2dp"
                    android:background="@color/color_white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:gravity="center"
                        android:text="创建时间"
                        android:textSize="@dimen/default_text_min_size" />

                    <TextView
                        android:id="@+id/tv_create_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/default_margin"
                        android:gravity="right|center_vertical"
                        android:text=""
                        android:textSize="@dimen/default_text_min_size" />

                </LinearLayout>
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/defalut_layout_height"
                    android:layout_marginTop="2dp"
                    android:background="@color/color_white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:gravity="center"
                        android:text="订单号"
                        android:textSize="@dimen/default_text_min_size" />

                    <TextView
                        android:id="@+id/tv_apply_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/default_margin"
                        android:gravity="right|center_vertical"
                        android:text=""
                        android:textSize="@dimen/default_text_min_size" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>

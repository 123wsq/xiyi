<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_backgroud_color"
    >
    <include layout="@layout/layout_default_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/image_bank_icbc"
            android:text="工商银行"
            android:gravity="center"
            android:textSize="@dimen/default_text_title_size"
            android:layout_marginTop="@dimen/radius_popup"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/image_money_black"
                />
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="30sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_cash_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/RED"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/radius_popup"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:background="@color/color_white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="处理进度"
            android:layout_marginTop="@dimen/radius_popup"
            android:layout_marginLeft="@dimen/radius_popup"
            android:textSize="@dimen/default_text_size"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/defalut_layout_height"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/default_margin"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/defalut_title_color"
                    android:visibility="invisible"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/defalut_title_color"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_apply_success"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:layout_marginLeft="@dimen/default_margin"
                android:gravity="center"
                android:textSize="@dimen/default_text_size"
                android:textColor="@color/defalut_title_color"
                />
            <TextView
                android:id="@+id/tv_apply_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text=""
                android:layout_marginLeft="@dimen/default_margin"
                android:gravity="center|right"
                android:textSize="@dimen/default_text_size"
                android:textColor="@color/color_gray"
                android:layout_marginRight="@dimen/default_margin"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/defalut_layout_height"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/default_margin"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/defalut_title_color"
                    android:visibility="visible"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/color_gray"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:layout_marginLeft="@dimen/default_margin"
                android:gravity="center"
                android:textSize="@dimen/default_text_size"
                android:textColor="@color/defalut_title_color"
                />
            <TextView
                android:id="@+id/tv_apply_time_i"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text=""
                android:layout_marginLeft="@dimen/default_margin"
                android:gravity="center|right"
                android:textSize="@dimen/default_text_size"
                android:textColor="@color/color_gray"
                android:layout_marginRight="@dimen/default_margin"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/defalut_layout_height"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/default_margin"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/color_gray"
                    android:visibility="visible"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:background="@color/color_gray"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="审核通过"
                android:layout_marginLeft="@dimen/default_margin"
                android:gravity="center"
                android:textSize="@dimen/default_text_size"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="预计1-7个工作日内到账"
                android:layout_marginLeft="@dimen/default_margin"
                android:gravity="center|right"
                android:textSize="@dimen/default_text_size"
                android:textColor="@color/color_gray"
                android:layout_marginRight="@dimen/default_margin"
                />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defalut_layout_height"
        android:background="@color/color_white"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="提现到"
        android:gravity="center"
        android:layout_marginLeft="@dimen/default_margin"
        android:textSize="@dimen/default_text_min_size"
        />

        <TextView
            android:id="@+id/tv_apply_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/default_margin"
            android:text=""
            android:textSize="@dimen/default_text_min_size"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_apply_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="申请理由:"
            android:gravity="center"
            android:layout_marginLeft="@dimen/default_margin"
            android:textSize="@dimen/default_text_min_size"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_radius"
            android:layout_marginRight="@dimen/default_margin"
            android:text=""
            android:textSize="@dimen/default_text_min_size"
            android:minLines="3"
            />

    </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_Details_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/defalut_layout_height"
                    android:background="@color/color_white"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="创建时间"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:textSize="@dimen/default_text_min_size"
                        />

                    <TextView
                        android:id="@+id/tv_create_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/default_margin"
                        android:text=""
                        android:textSize="@dimen/default_text_min_size"
                        />

                </LinearLayout>
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/defalut_layout_height"
                    android:background="@color/color_white"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="订单号"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:textSize="@dimen/default_text_min_size"
                        />

                    <TextView
                        android:id="@+id/tv_apply_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/default_margin"
                        android:text=""
                        android:textSize="@dimen/default_text_min_size"
                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

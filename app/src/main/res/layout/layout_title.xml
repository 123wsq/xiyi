<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/defalut_layout_height"
    android:background="@color/color_default_btn"
    >

    <RelativeLayout
        android:id="@+id/rl_title_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible"
        >
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="会员注册"
        android:gravity="center"
        android:textSize="@dimen/default_text_title_size"
        android:textColor="@color/color_white"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_back"
        android:layout_marginLeft="@dimen/defalut_layout_Indicator"
        android:visibility="visible"
        android:layout_centerVertical="true"
        />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_title_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/default_margin"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_location"
            />
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="青岛市市北区"
            android:textColor="@color/color_white"
            android:layout_marginLeft="@dimen/default_radius"
            android:singleLine="true"
            android:maxEms="5"
            android:ellipsize="end"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_down"
            android:layout_marginLeft="@dimen/default_radius"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@drawable/shape_seach_stoke"
            android:layout_marginLeft="@dimen/default_radius"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/image_gauge"
                android:layout_marginLeft="@dimen/default_margin"
                />
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_edit"
                android:hint="搜索项目"
                android:textColorHint="@color/color_white"
                android:textSize="@dimen/default_text_min_size"
                android:layout_marginLeft="@dimen/default_radius"
                android:editable="false"
                android:singleLine="true"

                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            >
            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_msg"
                android:layout_centerInParent="true"
                />
            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/default_radius"
                android:background="@drawable/shape_num"
                />
        </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_setting"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/default_margin"
        android:visibility="gone"
        />

</RelativeLayout>

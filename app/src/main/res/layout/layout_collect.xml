<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_backgroud_color"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defalut_layout_height"
        android:background="@color/defalut_title_color"

        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的收藏"
            android:textColor="@color/color_white"
            android:textSize="@dimen/default_text_size"
            />
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/radius_popup"
            />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="编辑"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/defalut_layout_height"
        />

    <!--可编辑的-->
    <LinearLayout
        android:id="@+id/ll_collect_buttom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defalut_layout_height"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
        <CheckBox
            android:id="@+id/cb_all_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_radius"
            android:text="全选"
            android:background="@color/color_white"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"></View>

        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="完成"
            android:background="@drawable/shape_button"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:layout_marginRight="@dimen/default_radius"
            />
    </LinearLayout>

    <!--没有数据是显示-->
    <LinearLayout
        android:id="@+id/ll_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/image_gz_press"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您还没有订单~"
            android:textSize="@dimen/default_text_title_size"
            android:gravity="center"
            android:layout_marginTop="@dimen/defalut_layout_height"
            android:textColor="@color/default_font_color"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击查看有没有新数据."
            android:textSize="@dimen/default_text_title_size"
            android:gravity="center"
            android:textColor="@color/default_font_color"
            />

        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击刷新"
            android:textSize="@dimen/default_text_title_size"
            android:gravity="center"
            android:layout_marginTop="@dimen/default_margin"
            android:textColor="@color/default_font_color"
            android:background="@drawable/shape_refresh"
            android:paddingLeft="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin"
            android:paddingTop="@dimen/default_radius"
            android:paddingBottom="@dimen/default_radius"
            />
    </LinearLayout>
</RelativeLayout>

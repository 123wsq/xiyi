<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_popup_gray"
        android:layout_marginBottom="60dp"
        android:padding="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="标题"
            android:gravity="center"
            android:textSize="@dimen/default_text_size"

            />
    </LinearLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:scrollbars="none"
        />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defalut_layout_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_popup_gray"
        android:layout_marginTop="@dimen/default_radius"
        android:text="取消"
        android:textSize="@dimen/default_text_title_size"
        android:textStyle="bold"
        android:textColor="@color/cancel_popup_color"
        android:gravity="center"
        />
</RelativeLayout>

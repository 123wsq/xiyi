<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_layout"
    >

    <include layout="@layout/layout_default_title"></include>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/defalut_layout_height"
    android:orientation="horizontal"
    android:background="@color/color_white"
    android:layout_marginTop="1dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="职务信息"
        android:gravity="center_vertical"
        android:textSize="@dimen/default_text_size"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_company"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defalut_layout_height"
        android:orientation="horizontal"
        android:background="@color/color_white"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="公司"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_text_size"
            android:drawableRight="@drawable/image_important"
            />

        <EditText
            android:id="@+id/et_company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:hint="请输入您的公司"
            android:background="@drawable/shape_text_stroken"
            android:singleLine="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defalut_layout_height"
        android:orientation="horizontal"
        android:background="@color/color_white"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="学历"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_text_size"
            android:drawableRight="@drawable/image_important"
            />

        <TextView
            android:id="@+id/tv_xueli"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:hint="高中及以下"
            android:background="@drawable/shape_text_stroken"
            android:singleLine="true"


            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:src="@drawable/image_right"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_radius"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defalut_layout_height"
        android:orientation="horizontal"
        android:background="@color/color_white"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="角色"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_text_size"
            android:drawableRight="@drawable/image_important"
            />

        <TextView
            android:id="@+id/tv_juese"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:hint="服务工程师"
            android:background="@drawable/shape_text_stroken"
            android:singleLine="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:src="@drawable/image_right"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_radius"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defalut_layout_height"
        android:orientation="horizontal"
        android:background="@color/color_white"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="部门及职务"
            android:gravity="center_vertical"
            android:textSize="@dimen/default_text_size"
            android:drawableRight="@drawable/image_important"
            />

        <EditText
            android:id="@+id/et_bumen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:hint="请填写您的部门和职务"
            android:background="@drawable/shape_text_stroken"
            android:singleLine="true"
            />
    </LinearLayout>


    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defalut_layout_height"
        android:text="下一步"
        android:textColor="@color/color_white"
        android:background="@color/color_default_btn"
        android:layout_margin="@dimen/defalut_layout_height"
        />


</LinearLayout>

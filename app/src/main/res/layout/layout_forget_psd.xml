<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_backgroud_color"
    android:fitsSystemWindows="true"
    >


    <include layout="@layout/layout_default_title"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/defalut_layout_Indicator"
        android:background="@drawable/shape_text_stroken"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/defalut_layout_height"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/defalut_layout_Indicator"
            android:paddingRight="@dimen/defalut_layout_Indicator"
            android:background="@color/color_white"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_edit"
                android:hint="请输入手机号码"
                android:singleLine="true"
                android:inputType="number"
                android:textColorHint="@color/color_gray"
                android:textSize="@dimen/default_text_size"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/defalut_layout_height"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/defalut_layout_Indicator"
            android:background="@color/color_white"
            android:layout_marginTop="0.5dp"
            android:gravity="center"
            >


            <EditText
                android:id="@+id/et_validateCode"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/shape_edit"
                android:hint="验证码"
                android:singleLine="true"
                android:textColorHint="@color/color_gray"
                android:textSize="@dimen/default_text_size"
                android:inputType="number"
                />

            <TextView
                android:id="@+id/tv_getCode"
                style="@style/default_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:background="@drawable/shape_disable_button"
                android:textSize="@dimen/default_text_size"
                android:text="获取验证码"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/defalut_layout_Indicator"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/defalut_layout_height"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/defalut_layout_Indicator"
            android:paddingRight="@dimen/defalut_layout_Indicator"
            android:background="@color/color_white"
            >

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_edit"
                android:hint="请输入用户名"
                android:textColorHint="@color/color_gray"
                android:textSize="@dimen/default_text_size"
                android:singleLine="true"
                android:inputType="textVisiblePassword"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/defalut_layout_height"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/defalut_layout_Indicator"
                android:paddingRight="@dimen/defalut_layout_Indicator"
                android:background="@color/color_white"
                android:layout_marginTop="0.5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_password1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_edit"
                    android:hint="请设置新密码（至少6位）"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/default_text_size"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/defalut_layout_height"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/defalut_layout_Indicator"
                android:paddingRight="@dimen/defalut_layout_Indicator"
                android:background="@color/color_white"
                android:layout_marginTop="0.5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_password2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_edit"
                    android:hint="请再次确认新密码"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/default_text_size"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    />
            </LinearLayout>




    </LinearLayout>


    <TextView
        android:id="@+id/tv_ok"
        style="@style/default_button"
        android:background="@drawable/shape_disable_button"
        android:text="确认"

        />

</LinearLayout>
